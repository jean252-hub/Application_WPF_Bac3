<Window x:Class="Application_Bac3_WPF.Formulaire_Chronometre"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chronomètre Analogique" Height="350" Width="350" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Canvas x:Name="canvasChrono" Grid.Row="0" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Ellipse Width="250" Height="250" Stroke="Black" StrokeThickness="4"/>
            <TextBlock Text="12" FontSize="18" FontWeight="Bold" Canvas.Left="112" Canvas.Top="3"/>
            <TextBlock Text="1" FontSize="16" FontWeight="Bold" Canvas.Left="175" Canvas.Top="20"/>
            <TextBlock Text="2" FontSize="16" FontWeight="Bold" Canvas.Left="210" Canvas.Top="50"/>
            <TextBlock Text="3" FontSize="18" FontWeight="Bold" Canvas.Left="220" Canvas.Top="100"/>
            <TextBlock Text="4" FontSize="16" FontWeight="Bold" Canvas.Left="215" Canvas.Top="150"/>
            <TextBlock Text="5" FontSize="16" FontWeight="Bold" Canvas.Left="180" Canvas.Top="195"/>
            <TextBlock Text="6" FontSize="18" FontWeight="Bold" Canvas.Left="117" Canvas.Top="220"/>
            <TextBlock Text="7" FontSize="16" FontWeight="Bold" Canvas.Left="60" Canvas.Top="205"/>
            <TextBlock Text="8" FontSize="16" FontWeight="Bold" Canvas.Left="25" Canvas.Top="170"/>
            <TextBlock Text="9" FontSize="18" FontWeight="Bold" Canvas.Left="10" Canvas.Top="115"/>
            <TextBlock Text="10" FontSize="16" FontWeight="Bold" Canvas.Left="25" Canvas.Top="55"/>
            <TextBlock Text="11" FontSize="16" FontWeight="Bold" Canvas.Left="65" Canvas.Top="15"/>

            <Canvas>
                <Line X1="125" Y1="25" X2="125" Y2="35" Stroke="Black" StrokeThickness="3"/>
                <Line X1="175" Y1="35" X2="168" Y2="53" Stroke="Black" StrokeThickness="2"/>
                <Line X1="215" Y1="75" X2="197" Y2="82" Stroke="Black" StrokeThickness="2"/>
                <Line X1="225" Y1="125" X2="205" Y2="125" Stroke="Black" StrokeThickness="3"/>
                <Line X1="215" Y1="175" X2="197" Y2="168" Stroke="Black" StrokeThickness="2"/>
                <Line X1="175" Y1="215" X2="168" Y2="197" Stroke="Black" StrokeThickness="2"/>
                <Line X1="125" Y1="225" X2="125" Y2="205" Stroke="Black" StrokeThickness="3"/>
                <Line X1="75" Y1="215" X2="82" Y2="197" Stroke="Black" StrokeThickness="2"/>
                <Line X1="25" Y1="125" X2="45" Y2="125" Stroke="Black" StrokeThickness="3"/>
                    <Line X1="35" Y1="175" X2="53" Y2="168" Stroke="Black" StrokeThickness="2"/>
                <Line X1="35" Y1="75" X2="53" Y2="82" Stroke="Black" StrokeThickness="2"/>
                <Line X1="75" Y1="35" X2="82" Y2="53" Stroke="Black" StrokeThickness="2"/>
            </Canvas>

            <Line X1="125" Y1="125" X2="125" Y2="25"
      Stroke="Red" StrokeThickness="2">
                <Line.RenderTransform>
                    <RotateTransform CenterX="125" CenterY="125"
                         Angle="{Binding SecondHandAngle, Mode=OneWay}"/>
                </Line.RenderTransform>
            </Line>
            <Line X1="125" Y1="125" X2="125" Y2="60"
      Stroke="Black" StrokeThickness="4">
                <Line.RenderTransform>
                    <RotateTransform CenterX="125" CenterY="125"
                         Angle="{Binding MinuteHandAngle, Mode=OneWay}"/>
                </Line.RenderTransform>
            </Line>

        </Canvas>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Grid.Row="1"
                    Margin="0,20,0,0">
            <Button x:Name="btnStart" Content="Start"  Command="{Binding StartCommand}" Width="90" Height="40" Margin="10,0" />
            <Button x:Name="btnStop" Content="Stop" Command="{Binding StopCommand}" Width="90" Height="40" Margin="10,0" />
            <Button x:Name="btnReset" Content="Reset" Command="{Binding ResetCommand}" Width="90" Height="40" Margin="10,0" />
        </StackPanel>
    </Grid>
</Window>